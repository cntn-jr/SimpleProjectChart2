{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM",
		],
		"jsx": "react-jsx",
		"module": "AMD",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": [
		"resources/ts/*",
		"resources/ts/**/*"
	]
}